{
  "name": "livechat-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node bootstrap.cjs",
    "dev": "nodemon --exec node bootstrap.cjs",
    "pm2": "pm2 start bootstrap.cjs --name livechat",
    "pm2:restart": "pm2 restart livechat --update-env || pm2 start bootstrap.cjs --name livechat",
    "pm2:stop": "pm2 delete livechat || true",
    "postinstall": "playwright install chromium || true",
    "db:truncate": "node scripts/reset-db.js",
    "db:reset": "node scripts/reset-db.js --drop-schema",
    "db:migrate:mcp": "node scripts/migrate-mcp-token.js",
    "db:migrate:org-rbac": "node scripts/migrate-org-rbac.js",
    "db:rebuild:chatbot-config": "node scripts/rebuild-chatbot-config.js",
    "db:migrate:jerome": "node scripts/migrate-jerome-pg.js",
    "jerome:clean:explore": "node scripts/clean-page-explore.js",
    "jerome:clean:explore:all": "node scripts/clean-page-explore.js --all --yes",
    "jerome:clean:explore:domain": "node scripts/clean-page-explore.js --domain stilcasashop.com --yes",
    "agent": "node scripts/agent.js",
    "mcp:try": "node scripts/try-mcp.mjs",
    "openai:tools:direct": "node scripts/openai-tools-direct.mjs",
    "migrate:deploy": "node ./scripts/migrate-deploy.cjs",
    "migrate:status": "node ./scripts/migrate-status.cjs",
    "modules:install:google": "node ../modules/google-api/backend/installer.js",
    "modules:install:cron": "node ../modules/cron-management/backend/installer.js"
  },
  "dependencies": {
    "@maxmind/geoip2-node": "^5.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.10",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "googleapis": "^140.0.0",
    "jszip": "^3.10.1",
    "mysql2": "^3.15.3",
    "openai": "^5.20.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.12.0",
    "playwright": "^1.48.2",
    "sharp": "^0.33.4",
    "socket.io": "^4.7.5",
    "ssh2": "^1.17.0",
    "ws": "^8.18.0"
  }
}
